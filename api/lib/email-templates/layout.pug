html
  head
    title Factile
    style.
        .body {
            background-color: #FFFFFF;
            font-family: Arial, Helvetica, sans-serif;
            color: #4a4a4a;
            line-height: 1.5;
            font-weight: normal;
            font-stretch: normal;
        }

        .container {
            margin: 0 auto;
            font-size: 15px;
            width: 600px;
        }

        .content {
            padding: 20px 40px;
            background-color: #FFFFFF;
            color: #333333;
        }

        .header {
            padding: 5px 20px;
            margin-bottom: 10px;
            font-size: 18px;
        }

        .header h1 {
            color: #4CA9FD;
            border-bottom: 1px solid #AAAAAA;
        }

        .header .text_gray {
            color: #AAAAAA;
        }

        .footer {
            padding: 10px 20px;
            margin-top: 20px;
            border-top: 1px solid #AAAAAA;
            font-size: 11px;
        }
